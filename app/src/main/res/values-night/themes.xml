<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GBas" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Outline colors -->
        <item name="colorOutline">@color/outline</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Component styles -->
        <item name="toolbarStyle">@style/Widget.GBas.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.GBas.BottomNavigation</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.GBas.Button</item>

        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>
</resources>