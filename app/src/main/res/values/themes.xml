<!-- values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GBas" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Outline colors -->
        <item name="colorOutline">@color/outline</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Component styles -->
        <item name="toolbarStyle">@style/Widget.GBas.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.GBas.BottomNavigation</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.GBas.Button</item>

        <item name="android:windowLightStatusBar">?attr/isLightTheme</item> <!-- для темных иконок -->
    </style>

    <!-- Toolbar style -->
    <style name="Widget.GBas.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimaryContainer</item>
        <item name="titleTextColor">?attr/colorOnPrimaryContainer</item>
        <item name="subtitleTextColor">?attr/colorOnPrimaryContainer</item>
        <item name="navigationIconTint">?attr/colorOnPrimaryContainer</item>
    </style>

    <!-- Bottom Navigation style -->
    <style name="Widget.GBas.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@drawable/bottom_nav_text_tint</item>
        <item name="android:background">@drawable/bottom_nav_border</item>
    </style>

    <!-- Button style -->
    <style name="Widget.GBas.Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.GBas.SmallComponent</item>
    </style>

    <!-- Shape appearance -->
    <style name="ShapeAppearance.GBas.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>